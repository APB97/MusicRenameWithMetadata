<Window x:Class="ActionsCreator.CreateActionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ActionsCreator"
        mc:Ignorable="d"
        Title="CreateActionsWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <ComboBox Name="ComboBoxActionClass" SelectionChanged="ComboBoxActionClass_OnSelectionChanged" />
            <ComboBox Name="ComboBoxActionName" SelectionChanged="ComboBoxActionName_OnSelectionChanged" />
            <TextBlock Name="TextBlockDescription" />
        </StackPanel>
    </Grid>
</Window>
