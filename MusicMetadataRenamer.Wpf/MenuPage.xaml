<Page x:Class="MusicMetadataRenamer.Wpf.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:MusicMetadataRenamer.Wpf"
      mc:Ignorable="d"
      Title="MenuPage" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Button Name="ButtonAddDirectory" Click="ButtonAddDirectory_OnClick" Content="Add directory"></Button>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Separator" ToolTip="String of characters separating properties" />
                <TextBox Name="TextBoxSeparator" Text=" - " />
                <ComboBox Name="ComboBoxProperties" />
                <Button Content="Add Selected Property" Click="ButtonAddProp_OnClick" />
            </StackPanel>
            <Button Name="ButtonExecute" Content="Execute" Click="ButtonExecute_OnClick"></Button>
            <StackPanel Orientation="Horizontal">
                <StackPanel Name="StackDirectories" Orientation="Vertical" />
                <StackPanel Name="StackPanelProperties" Orientation="Vertical" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
