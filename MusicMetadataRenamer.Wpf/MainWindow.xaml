<Window x:Class="MusicMetadataRenamer.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicMetadataRenamer.Wpf"
        xmlns:view="clr-namespace:MusicMetadataRenamer.Wpf.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <view:DirectoriesView x:Name="directories"/>
            <view:PropertiesView x:Name="properties"/>
        </StackPanel>
    </Grid>
</Window>
